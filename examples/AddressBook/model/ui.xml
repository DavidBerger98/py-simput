<layouts>
    <ui id="Person">
        <col>
            <row>
                <input class="mr-1" name="FirstName" />
                <input class="ml-1" name="LastName" />
            </row>
            <row>
                <input name="Street" />
            </row>
            <row>
                <input name="City" />
                <input class="mx-2" name="State" />
                <input name="ZipCode" />
            </row>
            <row>
                <input name="Country" />
            </row>
        </col>
    </ui>

    <ui id="Agenda">
        <table name="Contacts" columns="FirstName,LastName,City,State,Country" select="Active" />
        <panel name="Active" />
    </ui>
</layouts>
